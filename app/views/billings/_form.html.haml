= form_for(@billings) do |f|
  - if @billing.errors.any?
    #error_explanation
      %h2
        = pluralize(@billing.errors.count, "error")
        prohibited this billing from being saved:
      %ul
        - @billing.errors.full_messages.each do |message|
          %li= message

  %br/
  = link_to 'Create New Consultant', new_consultant_path
  %br/
  %br/
  .field
    = f.label "Consultant"
    = f.select :consultant_id, Consultant.all.collect { |c| [(c.last_name + ", " + c.first_name), c.id]}

    = f.label "Project"
    = f.select :project_id, Project.all.collect { |p| [p.name, p.id]}
    
    %br/
    - 5.times do
      = f.label :bill_date
      = f.date_select :bill_date
      = f.label :hours
      = f.text_field :hours
  .field

  .actions
    = f.submit
